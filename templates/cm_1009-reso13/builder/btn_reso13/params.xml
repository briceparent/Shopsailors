<menubutton>
    <layers>
        <layer type="text" zindex="50">
            <position src="text.png" align="center" valign="middle"/>
            <palette type="file" state="passive,hover" src="palette_text_passive.png"/>
            <palette type="file" state="selected" src="palette_text_selected.png"/>
        </layer>
        <layer type="decoration" zindex="0">
            <image src="background.png"/>
            <stretch src="background-stretch.png"/>
            <palette type="none"/>
        </layer>
        <layer type="decoration" zindex="1">  
            <image src="arrows.png"/>     
            <stretch src="arrows-stretch.png"/>
            <palette type="file" state="passive,hover,selected" src="palette_arrows.png"/>
        </layer>
    </layers>
</menubutton>
