
<div>
    <RENDER_LOOP what="topics">
        <div class="forum_lastPosts_one">
            <div class="forum_lastPosts_one_title">
                <a href="{topics:link}" title="{topics:title}"><RENDER_VALUE what="topics:title"/></a>
            </div>
            <div class="forum_lastPosts_one_date">
                <RENDER_MODIFYVALUE what="topics:date" method="toLocalDateAndTime" class="datePicker" new="topicsDate:value"/><RENDER_VALUE what="topicsDate:value"/>
            </div>
            <div class="clear"></div>
            <div class="forum_lastPosts_one_content">
                <RENDER_MODIFYVALUE what="topics:content" method="cut|520|word" new="temp:value"/><RENDER_VALUE what="temp:value"/>...
            </div>
            <div class="lastPosts_knowMore">
                <a href="{topics:link}" title="En savoir plus">
                    <img src="/images/template/know_more.png" alt="En savoir plus"/>
                </a>
            </div>
        </div>
    </RENDER_LOOP>
</div>