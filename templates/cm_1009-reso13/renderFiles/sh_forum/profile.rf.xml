
<div id="forum_profileUser">
    <RENDER_CSS>
        body #topTitle_container{display:none}
        #tmpContent #forum_menu{display:block}
        <RENDER_IFSET what="profile:this_is_mine">
            #forumMenu_myProfil{background: transparent url(/images/template/bg_forum_menu_hover.png) repeat-x top center;}
        </RENDER_IFSET>
    </RENDER_CSS>
    <RENDER_IFSET what="profile:this_is_mine">
        <div id="profile_modifyDatas">
            <a href="/user/profile.php#tab_forum">Modifier mon profil</a>
        </div>
    </RENDER_IFSET>
    <RENDER_IFNOTSET what="profile:this_is_mine">
        <div id="profile_sendMessage">
            <a href="{links:privatemessage}">Envoyer un message priv√©</a>
        </div>
    </RENDER_IFNOTSET>
    <RENDER_IFSET what="profile:image">
        <img src="{profile:image}.resized.100.100.png" class="profilUser_image" alt="image" title="image"/>
    </RENDER_IFSET>
    <div style="min-height:160px;;float:left;">
        <RENDER_VALUE what="externalDatas:cm_reso13"/>
    </div>
    <div class="clear"></div>
    <hr />
    <RENDER_VALUE what="profile:profile_text"/>
    <hr />
    <div class="clear"></div>
    <RENDER_FORUM_LASTTOPICS count="5" user="{profile:id}"/>
</div>