<RENDER_FORM id="bank_manager">
    <RENDER_IFSET what="message:text">
        <RENDER_NOTIF size="L" type="alert">
            <RENDER_VALUE what="message:text"/>
        </RENDER_NOTIF>
    </RENDER_IFSET>
    <RENDER_ADMINBOX title="CM-CIC P@iement">
        <RENDER_ADMINBOXCONTENT>
            <RENDER_CHECKBOX text="{i18n:activated}" name="active" state="{bank:state}" help="{i18n:activated_explanation}"/>
            <table>
                <tr>
                    <td>
                        <RENDER_VALUE what="i18n:currency"/>
                        <RENDER_HELP what="{i18n:currency_explanations}"/>
                    </td>
                    <td>
                        <select name="currency">
                            <RENDER_LOOP what="currencies">
                                <option value="{currencies:code}" state="{currencies:state}">
                                    <RENDER_VALUE what="i18n:code_{currencies:code}"/> -
                                    <RENDER_VALUE what="i18n:country_{currencies:code}"/>
                                </option>
                            </RENDER_LOOP>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <RENDER_VALUE what="i18n:mode"/>
                        <RENDER_HELP what="{i18n:mode_explanations}"/>
                    </td>
                    <td>
                        <select name="mode">
                            <option value="test" state="{mode:test}">Mode de test</option>
                            <option value="prod" state="{mode:prod}">Mode de production</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <RENDER_VALUE what="i18n:tpe"/>
                        <RENDER_HELP what="{i18n:tpe_explanations}"/>
                    </td>
                    <td><input name="tpe" value="{bank:tpe}"/></td>
                </tr>
                <tr>
                    <td>
                        <RENDER_VALUE what="i18n:mac"/>
                        <RENDER_HELP what="{i18n:mac_explanations}"/>
                    </td>
                    <td><input name="mac" value="{bank:mac}"/></td>
                </tr>
                <tr>
                    <td>
                        <RENDER_VALUE what="i18n:societe"/>
                        <RENDER_HELP what="{i18n:societe_explanations}"/>
                    </td>
                    <td><input name="societe" value="{bank:societe}"/></td>
                </tr>
            </table>
            <input type="hidden" name="langue" value="{bank:langue}"/>
            <input type="hidden" name="version" value="{bank:version}"/>
            <div class="tab_buttons">
                <input class="tab_button btn_validate" type="submit" name="submit" value="{i18n:send}"/>
            </div>

        </RENDER_ADMINBOXCONTENT>
    </RENDER_ADMINBOX>
</RENDER_FORM>