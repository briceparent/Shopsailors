<span id="global_{help:id}">
    <img src="/images/shared/icons/help.png" class="aLink helpToolTip" title="{i18n:help}" onmouseover="UnTip();TagToTip('{help:id}',BORDERCOLOR,'#003366',TITLEBGCOLOR,'#336699', BALLOON, true, ABOVE, true)" onmouseout="UnTip()"/>
    <span id="{help:id}">
        <span class="render_help_explanation">
            <RENDER_VALUE what="help:what"/>
        </span>
    </span>
</span>