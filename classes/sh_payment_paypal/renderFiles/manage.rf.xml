
<RENDER_FORM id="bank_manager">
    <RENDER_IFSET what="message:text">
        <RENDER_NOTIF size="L" type="alert">
            <RENDER_VALUE what="message:text"/>
        </RENDER_NOTIF>
    </RENDER_IFSET>
    <RENDER_TABGROUP size="L" validate="{i18n:save}" admin="admin">
        <RENDER_TAB title="{i18n:settings}">
            <RENDER_CHECKBOX text="{i18n:activated}" name="active" state="{bank:state}" help="{i18n:activated_explanation}"/>
            <hr />
            API - Nom d'utilisateur : 
            <input class="autocheck" name="api_username" required="required" value="{bank:api_username}"/>
            <br />
            API - Mot de passe : 
            <input class="autocheck" name="api_password" required="required" value="{bank:api_password}"/>
            <br />
            API - Signature : 
            <input class="autocheck" name="api_signature" required="required" value="{bank:api_signature}"/>
            <hr />
            <RENDER_CHECKBOX text="Utiliser dans la sandbox ? " name="sandbox" state="{bank:sandbox}" help="Laissez cette case cochée pour faire des tests de paiement. Décochez la case une fois que tous vos tests ont été concluants."/>
            <hr />
            <RENDER_VALUE what="i18n:describeMode"/>
            <br />
            <RENDER_I18NTEXTAREA class="sh_payment_paypal" i18n="{bank:description}" name="description"/>
            <hr />
            <RENDER_VALUE what="i18n:extraTextForBill"/>
            <RENDER_HELP>
                <RENDER_VALUE what="i18n:extraTextForBill_explanations"/>
            </RENDER_HELP>
            <br />
            <RENDER_I18NTEXTAREA class="sh_payment_paypal" i18n="{bank:extraTextForBill}" name="extraTextForBill"/>
        </RENDER_TAB>
        <NORENDER>
    
            <RENDER_TAB title="{i18n:mails}">
                <RENDER_VALUE what="i18n:mails_intro"/>
                <br />
                <textarea name="mail_model" required="required" style="width:100%;height:140px;resize: vertical;">
                    <RENDER_VALUE what="bank:mail_model"/>
                </textarea>
                <br />
                <RENDER_VALUE what="i18n:mails_text_symbols"/>

            </RENDER_TAB>
        </NORENDER>
    </RENDER_TABGROUP>
</RENDER_FORM>