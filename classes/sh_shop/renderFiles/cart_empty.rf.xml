<RENDER_NOTIF size="M" title="{i18n:cart_title}">
    <RENDER_IFSET what="message:content">
        <div class="alertCart">
            <RENDER_VALUE what="message:content"/>
        </div>
    </RENDER_IFSET>
    <div class="emptyCart">
        <RENDER_VALUE what="i18n:emptyCart"/>
    </div>
</RENDER_NOTIF>