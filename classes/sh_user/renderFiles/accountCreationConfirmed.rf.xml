<div id="connection_mainContainer">
    <RENDER_NOTIF size="M" title="{i18n:accountCreationCongratulation} {user:lastName} {user:name}!">
        <div>
            <RENDER_VALUE what="i18n:accountCreationValidated"/>
        </div>
        <div>
            <RENDER_LOOP what="messages">
                <div class="backToCart">
                    <a href="{messages:link}">
                        <RENDER_IFSET what="messages:image">
                            <div class="image"><img src="{messages:image}" alt="{messages:title}"/></div>
                            <div class="text"><RENDER_VALUE what="messages:title"/></div>
                        </RENDER_IFSET>
                    </a>
                </div>
            </RENDER_LOOP>
        </div>
    </RENDER_NOTIF>
</div>
