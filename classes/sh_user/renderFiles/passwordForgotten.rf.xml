<div id="connection_mainContainer">
    <RENDER_NOTIF size="M" title="{i18n:passwordForgotten_title}">
        <RENDER_IFSET what="error:message">
            <div class="errorLogin"><RENDER_VALUE what="error:message"/></div>
        </RENDER_IFSET>
        <RENDER_FORM id="passwordForgotten">
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <td><RENDER_VALUE what="i18n:passwordForgotten_email"/></td>
                </tr>
                <tr><td class="center"><input name="mail"/></td></tr>
            </table>
            <div class="noBorder"><input type="image" src="/images/shared/icons/picto_validate.png"/></div>
        </RENDER_FORM>
    </RENDER_NOTIF>
</div>