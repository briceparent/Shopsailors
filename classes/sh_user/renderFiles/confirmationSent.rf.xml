<div id="connection_mainContainer">
    <RENDER_NOTIF size="M" title="{i18n:accountCreated}">
        <div>
            <RENDER_VALUE what="i18n:mailConfirmSent"/><br />
            <RENDER_VALUE what="user:mail"/><br />
            <RENDER_VALUE what="i18n:wayToConfirm"/><br /><br />
            <RENDER_VALUE what="i18n:websailorsThanksYou"/><br />
        </div>

    <div>
            <RENDER_LOOP what="messages">
                <div class="backToCart">
                    <a href="{messages:link}">
                        <RENDER_IFSET what="messages:image">
                            <div class="image"><img src="{messages:image}" alt="{messages:title}"/></div>
                            <div class="text"><RENDER_VALUE what="messages:title"/></div>
                        </RENDER_IFSET>
                    </a>
                </div>
            </RENDER_LOOP>
        </div>
    </RENDER_NOTIF>
</div>
