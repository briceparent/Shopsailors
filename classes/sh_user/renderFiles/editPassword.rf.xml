<div id="profile_mainContainer">
    <RENDER_IFSET what="error:id">
        <RENDER_NOTIF size="M" type="alert" title="Erreur">
            <RENDER_VALUE what="i18n:{error:id}"/>
        </RENDER_NOTIF>
    </RENDER_IFSET>
    <RENDER_NOTIF size="M" title="Modification du mot de passe">
        <RENDER_FORM id="editPassword">
            <table style="width:100%;">
                <tr>
                    <td class="right" style="width:50%;">
                        Ancien mot de passe :
                    </td>
                    <td class="left">
                        <input type="password" name="password[old]" value="" autocomplete="off"/>
                    </td>
                </tr>
                <tr>
                    <td class="right">
                        Nouveau mot de passe :
                    </td>
                    <td class="left">
                        <input type="password" name="password[new]" value="" autocomplete="off"/>
                    </td>
                </tr>
                <tr>
                    <td class="right">
                        Nouveau mot de passe :
                    </td>
                    <td class="left">
                        <input type="password" name="password[verif]" value="" autocomplete="off"/>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="center" style="padding-top:15px;">
                        <input type="submit" value="{i18n:modify}"/>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" class="center italic" style="padding-top:15px;">
                        <RENDER_VALUE what="i18n:password_allSitesModif"/>
                    </td>
                </tr>
            </table>
        </RENDER_FORM>
    </RENDER_NOTIF>
</div>